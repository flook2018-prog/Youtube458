{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "startCommand": "python app.py",
    "restartPolicyMaxRetries": 5,
    "restartPolicyWindowSeconds": 60
  },
  "env": {
    "ENVIRONMENT": "production",
    "FLASK_PORT": "5000",
    "FLASK_HOST": "0.0.0.0"
  }
}
