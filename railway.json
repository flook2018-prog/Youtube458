{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "startCommand": "gunicorn --bind 0.0.0.0:5000 --workers 2 --threads 4 --timeout 60 wsgi:app",
    "restartPolicyMaxRetries": 5,
    "restartPolicyWindowSeconds": 60
  },
  "env": {
    "ENVIRONMENT": "production",
    "FLASK_PORT": "5000",
    "FLASK_HOST": "0.0.0.0"
  }
}
